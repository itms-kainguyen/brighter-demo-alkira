<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="patient_aftercare_send_view_form" model="ir.ui.view">
        <field name="name">patient.aftercare.send.form</field>
        <field name="model">patient.aftercare.send</field>
        <field name="arch" type="xml">
            <form>
                <div>
                    <field name="aftercare_id" required="1" invisible="1"/>
                    <field name="composition_mode" invisible="1"/>
                     <field name="email_from" invisible="1" />
                </div>
                <div name="aftercare_mail_form" >
                        <!-- visible wizard -->
                        <div>
                            <group>
                                <label for="partner_ids" string="Recipients" groups="base.group_user"/>
                                <div groups="base.group_user">
                                    <field name="partner_ids" widget="many2many_tags_email" placeholder="Add contacts to notify..."
                                        context="{'force_email':True, 'show_email':True}"/>
                                </div>
                                <field name="subject" placeholder="Subject..."/>
                            </group>
                            <field name="body" class="oe-bordered-editor" options="{'style-inline': true}"/>
                        </div>
                        <group>
                            <group>
                                <field name="attachment_ids" widget="many2many_binary" string="Attach a file" nolabel="1" colspan="2"/>
                            </group>
                            <group>
                                <field name="template_id" options="{'no_create': True, 'no_edit': True}"
                                    context="{'default_model': 'patient.aftercare'}" invisible="1"/>
                            </group>
                        </group>
                    </div>
                <footer>
                    <button string="Send"
                            name="send_action"
                            type="object"
                            class="btn-primary"/>
                    <button string="Discard"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
