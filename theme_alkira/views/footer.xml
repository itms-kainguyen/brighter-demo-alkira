<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Footer templates -->
        <template id="footer_custom" inherit_id="website.layout" name="Default" active="True">
            <xpath expr="//div[@id='footer']" position="replace">
                <div id="footer" class="oe_structure oe_structure_solo" t-ignore="true" t-if="not no_footer">
                    <section class="s_text_block allrights pb16" data-snippet="s_text_block" data-name="Text">
                        <div class="container">
                            <div class="row text-center">
                                <div>
                                    All rights reserved Â© Brighterapn 2022
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>


            <xpath expr="//div[@id='footer']" position="attributes">
                <attribute name="t-attf-class" add="xxxxxxxxxxxxxxxxxxxx" separator=" "/>
            </xpath>


        </template>
    </data>
</odoo>