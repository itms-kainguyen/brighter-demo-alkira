<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	 <record model="ir.module.category" id="module_category_appointment">
            <field name="name">Calendar</field>
            <field name="exclusive" eval="0"/>
            <field name="sequence">102</field>
        </record>

    <record id="group_helpdesk_user" model="res.groups">
        <field name="name">User: Own Appointments Only</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="doctor_appointment_booking_advance_axis.module_category_appointment"/>
    </record>


<!--    <record id="group_helpdesk_manager" model="res.groups">-->
<!--        <field name="name">User: All Document</field>-->
<!--        <field name="category_id" ref="doctor_appointment_booking_advance_axis.module_category_appointment"/>-->
<!--        <field name="implied_ids" eval="[(4, ref('group_helpdesk_user'))]"/>-->
<!--        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>-->
<!--    </record>-->

    <record id="group_helpdesk_admin" model="res.groups">
        <field name="name">Administrator: All Apointments</field>
        <field name="category_id" ref="doctor_appointment_booking_advance_axis.module_category_appointment"/>
        <field name="implied_ids" eval="[(4, ref('group_helpdesk_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

     <data noupdate="0">
     	 <record id="helpdesk_manager_rule" model="ir.rule">
            <field name="name">Administrator</field>
            <field name="model_id" ref="model_calendar_appointment_type"/>
            <field name="groups" eval="[(4, ref('group_helpdesk_admin'))]"/>
        </record>

        <record id="helpdesk_user_rule" model="ir.rule">
            <field name="name">Users</field>
            <field name="model_id" ref="model_calendar_appointment_type"/>
           	<field name="domain_force">['|', ('partner_id.id','=', user.partner_id.id), ('partner_id','=', False)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="groups" eval="[(4, ref('group_helpdesk_user'))]"/>
        </record>

          <record id="helpdesk_calendar_event_rule_employee" model="ir.rule">
              <field ref="calendar.model_calendar_event" name="model_id"/>
              <field name="name">All Calendar Event</field>
              <field name="domain_force">[(1, '=', 1)]</field>
              <field name="groups" eval="[(4, ref('group_helpdesk_admin'))]"/>
        </record>

         <record id="helpdesk_calendar_event_rule_private" model="ir.rule">
            <field ref="calendar.model_calendar_event" name="model_id"/>
            <field name="name">Own Calendar Only Rule</field>
             <field name="domain_force">['|',('user_id', '=', user.id),'|', ('partner_ids', 'in', user.partner_id.id),('doctore_id', '=', user.partner_id.id)]</field>
<!--          ['|','&amp;',('user_id', '=', user.id),'&amp;', ('partner_ids', 'in', user.partner_id.id),('doctore_id', '=', user.partner_id.id), ('doctore_id.position_type', '=', 'Prescriber')]</field>-->
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
             <field name="groups" eval="[(4, ref('group_helpdesk_user'))]"/>
        </record>

        <!-- Rule -->

         <record id="contact_see_all" model="ir.rule">
            <field name="name">All Contact</field>
            <field name="model_id" ref="base.model_res_partner" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('doctor_appointment_booking_advance_axis.group_helpdesk_admin'))]"/>
        </record>

        <record id="patient_by_nurse_rule" model="ir.rule">
            <field name="name">Patient by Nurse</field>
            <field name="model_id" ref="base.model_res_partner" />
            <field name="domain_force">['|',('nurses_id','=',user.partner_id.id),('nurses_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('group_helpdesk_user'))]"/>
        </record>

    </data>

</odoo>