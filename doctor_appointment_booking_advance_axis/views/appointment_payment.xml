    <data>
       <record id="view_all_appointmetpayment_tree" model="ir.ui.view">
        <field name="name">appointment.tree</field>
        <field name="model">calendar.event</field>
        <field name="arch" type="xml">
            <tree string="Payments" create="false" delete="false" edit="false">
                <field name="apppoint_event_id" string="Appointment" invisible="1"/>
                <field name="name" string="Subject" decoration-bf="1"/>
                <field name="doctore_id" string="Doctor"/>
                <field name="partner_new" readonly="1" string="Patient" />
                <field name="start_at" string="Date"/>
                <field name="start" string="Start Date" readonly="1"/>
                <field name="stop" string="End Date" readonly="1"/>
                <field name="videocall_location" widget="url" text="Join Video Call" options="{'icon': 'fa fa-lg fa-video-camera'}" attrs="{'invisible': [('videocall_location', '=', False)]}"/>
<!--                <field name="amount" string="Charge" />-->
<!--                <field name="payment_state" string="Payment Status" invisible="1"/>-->
                 <field name="state"
                        decoration-success="state == 'confirmed'"
                        decoration-warning="state == 'pending'"
                        decoration-info="state == 'treated'"
                        decoration-danger="state == 'cancelled'"
                        widget="badge"/>
            </tree>
        </field>
    </record>

