        <record id="aboutus" model="website.page">
            <field name="is_published">True</field>
            <field name="url">/brighter-about-section</field>
            <field name="view_id" ref="aboutus_page"/>
            <field name="track">True</field>
        </record>

    </data>

</odoo>
