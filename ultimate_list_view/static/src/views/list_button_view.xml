<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="web.ListView.Buttons" t-inherit-mode="extension">
        <xpath expr="//*[@class='btn btn-secondary fa fa-download o_list_export_xlsx']" position="after">
            <div class="dropdown">
                <button class="btn filter_buttons dropdown-toggle" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="me-1 fa fa-download"></i>
                    <span class="o_dropdown_title">Export</span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="exportDropdown">
                    <li>
                        <a class="dropdown-item" type="button" t-on-click="actionDef">Export as PDF</a>
                    </li>
                    <li>
                        <a class="dropdown-item" type="button" t-on-click="exportOnDirectExportDataXlsx">Export as XLSX</a>
                    </li>
                    <li>
                        <a class="dropdown-item" type="button" t-on-click="exportOnDirectExportDataCsv">Export as CSV</a>
                    </li>
                </ul>
            </div>
            <button id="copyButton" onclick="onCopyClick()" class="btn filter_buttons" tabindex="0" aria-expanded="false">
                <i class="me-1 fa fa-copy"></i>
                <span class="o_dropdown_title">Copy</span>
              </button>
        </xpath>
    </t>
