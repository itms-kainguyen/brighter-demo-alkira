<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="appointment_group_view_form" model="ir.ui.view">
        <field name="name">appointment.group.form</field>
        <field name="model">appointment.group</field>
        <field name="arch" type="xml">
            <form string="Checklist Group">

                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                     <field name="active" invisible="1"/>
                    <div class="oe_title">
                        <label for="name" string="Checklist Group"/>
                        <h1>
                            <field class="text-break" name="name" placeholder="e.g. North America"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Members" name="members_users">
                            <field name="member_ids" mode="kanban"
                                class="w-100">
                                <kanban>
                                    <field name="id"/>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="avatar_128"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_card oe_kanban_global_click">
                                                <div class="o_kanban_card_content d-flex">
                                                    <div>
                                                        <img t-att-src="kanban_image('res.users', 'avatar_128', record.id.raw_value)"
                                                            class="o_kanban_image o_image_64_cover" alt="Avatar"/>
                                                    </div>
                                                    <div class="oe_kanban_details d-flex flex-column ms-3">
                                                        <strong class="o_kanban_record_title oe_partner_heading"><field name="name"/></strong>
                                                        <div class="d-flex align-items-baseline text-break">
                                                            <i class="fa fa-envelope me-1" role="img" aria-label="Email" title="Email"/><field name="email"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>

                        </page>
                        <page string="Check List">
                    <field name="check_line_ids">
                        <tree editable="bottom">
                            <field name="state"/>
                            <field name="name"/>
                            <field name="group_ids" widget="many2many_tags"/>
                            <field name="should_be_reset"/>
                            <field name="color_sel"/>
                        </tree>
                    </field>
                    <label for="no_stages_ids"/>
                    <field name="no_stages_ids" context="{'default_name': 'Tech'}">
                        <tree editable="bottom">
                            <field name="state"/>
                            <field name="name" invisible="1"/>
                        </tree>
                    </field>
                </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" help="Follow this salesteam to automatically track the events associated to users of this team."/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="appointment_group_view_tree" model="ir.ui.view">
        <field name="name">appointment.group.tree</field>
        <field name="model">appointment.group</field>
        <field name="arch" type="xml">
            <tree string="Checklist Group" sample="1" multi_edit="1">
                <field name="name" readonly="1"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

      <record id="action_appointment_group" model="ir.actions.act_window">
        <field name="name">Checklist Group</field>
        <field name="res_model">appointment.group</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new Checklist
            </p>
        </field>
    </record>

    <menuitem id="menu_openappointment_group" name="Checklist Group" sequence="2" parent="acs_hms.menu_appointment_cofig" action="action_appointment_group" groups="acs_hms_base.group_hms_manager"/>

</odoo>