<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">

    <t t-name="dynamic_filters" id="custom_listrenderer" t-inherit="web.ListRenderer" t-inherit-mode="extension" owl="1">
        <xpath expr="//span[hasclass('o_resize')]" position="after">
            <span>
                <t t-if="column.FieldComponent.name == 'DateField'">
                    <DatePicker  onDateTimeChanged="date => this.onDateTimeChanged(date, column.name)"/>
                </t>
                <t t-elif="column.FieldComponent.name === 'DateTimeField'">
                    <!-- <DateTimePicker  onDateTimeChanged="date => this.onDateTimeChanged(date, column.name)"/> -->
                        <span></span>
                </t>
                <t t-else="">
                    <input t-att-placeholder="column.label" t-att-id="column.name" t-att-name="column.label" class="filter_searchview_input" accesskey="Q" role="searchbox" type="text" t-on-input="onSearchBarInput" t-on-keydown="onSearchBarKeydown"/>
                </t>
            </span>
        </xpath>
    </t>
    <t t-name="dynamic" id="account_custom_listrenderer" t-inherit="account.ListRenderer" t-inherit-mode="extension" owl="1">
        <xpath expr="//span[hasclass('o_resize')]" position="after">
            <input t-att-id="column.name" t-att-name="column.label" class="filter_searchview_input" accesskey="Q" role="searchbox" type="text" t-on-input="onSearchBarInput" t-on-keydown="onSearchBarKeydown"/>
        </xpath>
    </t>
    <t t-name="dynamic" id="purchase_custom_listrenderer" t-inherit="purchase.PurchaseListView" t-inherit-mode="extension" owl="1">
        <xpath expr="//span[hasclass('o_resize')]" position="after">
            <input t-att-id="column.name" t-att-name="column.label" class="filter_searchview_input" accesskey="Q" role="searchbox" type="text" t-on-input="onSearchBarInput" t-on-keydown="onSearchBarKeydown"/>
        </xpath>
    </t>
</templates>